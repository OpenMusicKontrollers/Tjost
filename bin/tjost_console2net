cli = require('tjost_cli')

conf = cli:new({
	url = 'osc.udp4://localhost:3333',
	rtprio = 50,
	unroll = 'none',
	offset = 0,
	verbose = 0
})
conf:parse(argv)

dump = tjost.plugin({
	name='dump',
	verbose=conf.verbose
})

net_io = tjost.plugin({
	name='net_out',
	uri=conf.url,
	rtprio=conf.rtprio,
	unroll=conf.unroll,
	offset=conf.offset
}, dump)

send = tjost.plugin({
	name='send'
}, function(...) net_io(...) end)
